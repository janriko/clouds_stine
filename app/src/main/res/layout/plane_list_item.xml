<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/one_grid_unit"
        android:layout_marginTop="@dimen/one_grid_unit"
        android:layout_marginBottom="@dimen/one_grid_unit"
        app:strokeWidth="1dp"
        app:strokeColor="@color/brightPrimary"
        app:cardElevation="0dp">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/one_grid_unit"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/icao_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/one_grid_unit"
                        android:text="@string/icao" />


                    <TextView
                        android:id="@+id/icao_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_data"
                        tools:text="B3K127" />


                    <TextView
                        android:id="@+id/distance_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/one_grid_unit"
                        android:text="@string/entfernung" />


                    <TextView
                        android:id="@+id/distance_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_data"
                        tools:text="3 km" />

                    <TextView
                        android:id="@+id/plane_type_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/one_grid_unit"
                        android:text="@string/typ" />


                    <TextView
                        android:id="@+id/plane_type_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/one_grid_unit"
                        android:text="@string/no_data"
                        tools:text="A320" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/four_grid_unit"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/callsign_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/one_grid_unit"
                        android:text="@string/callsign" />


                    <TextView
                        android:id="@+id/callsign_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_data"
                        tools:text="LH237" />


                    <TextView
                        android:id="@+id/height_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/one_grid_unit"
                        android:text="@string/height" />


                    <TextView
                        android:id="@+id/height_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_data"
                        tools:text="4000ft" />


                    <TextView
                        android:id="@+id/company_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/one_grid_unit"
                        android:text="@string/fluggesellschaft" />


                    <TextView
                        android:id="@+id/company_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/one_grid_unit"
                        android:text="@string/no_data"
                        tools:text="Luftahnsa" />

                </LinearLayout>


            <ImageView
                android:id="@+id/imageView"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/four_grid_unit"
                app:srcCompat="@drawable/no_plane_found" />
            </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>